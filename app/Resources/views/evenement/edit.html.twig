{% extends 'baseAdmin.html.twig' %}

{% block content %}
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Evenement Edit</h3>
            </div>
            {{ form_start(edit_form) }}
            <div class="card-body">
                <div class="form-group">
                    <label for="exampleInputEmail1">Nom : </label>
                    {% if edit_form.nomEvenement.vars.valid==true %}
                        {{ form_widget(edit_form.nomEvenement, { 'attr': {'class': 'form-control','row':'1'} }) }}
                    {% else %}
                        {{ form_widget(edit_form.nomEvenement, { 'attr': {'class': 'form-control is-invalid','row':'1'} }) }}
                    {% endif %}
                    <span class="error invalid-feedback">{{ form_errors(edit_form.nomEvenement) }}</span>
                </div>
                <div class="form-group">
                    <label for="exampleInputFile">Theme : </label>
                    {{ form_widget(edit_form.theme, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <div class="form-group">
                    <label >Description : </label>
                    {% if edit_form.description.vars.valid==true %}
                        {{ form_widget(edit_form.description, { 'attr': {'class': 'form-control','row':'7'} }) }}
                    {% else %}
                        {{ form_widget(edit_form.description, { 'attr': {'class': 'form-control is-invalid','row':'7'} }) }}
                    {% endif %}
                    <span class="error invalid-feedback">{{ form_errors(edit_form.description) }}</span>
                </div>
                <div class="form-group">
                    <label for="exampleInputFile">Date : </label>
                    {% if edit_form.date.vars.valid==true %}
                        {{ form_widget(edit_form.date, { 'attr': {'class': 'form-control'} }) }}
                    {% else %}
                        {{ form_widget(edit_form.date, { 'attr': {'class': 'form-control is-invalid'} }) }}
                    {% endif %}
                    <span class="error invalid-feedback">{{ form_errors(edit_form.date) }}</span>
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </div>
            {{ form_end(edit_form) }}

            {{ form_start(delete_form) }}
            <input type="submit" class="btn btn-danger btn-block" value="Delete">
            {{ form_end(delete_form) }}

        </div>
        <!-- /.card -->

    </section>
{% endblock %}



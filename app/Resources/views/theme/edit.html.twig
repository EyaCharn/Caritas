{% extends 'baseAdmin.html.twig' %}

{% block content %}
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Theme edit</h3>
            </div>
            <div class="card-body">
                {{ form_start(edit_form) }}
                <div class="form-group">
                    <label >Nom : </label>
                    {% if edit_form.nom.vars.valid==true %}
                        {{ form_widget(edit_form.nom, { 'attr': {'class': 'form-control','row':'1'} }) }}
                    {% else %}
                        {{ form_widget(edit_form.nom, { 'attr': {'class': 'form-control is-invalid','row':'1'} }) }}
                    {% endif %}
                    <span class="error invalid-feedback">{{ form_errors(edit_form.nom) }}</span>
                </div>
                <div class="form-group">
                    <label >Description : </label>
                    {% if edit_form.description.vars.valid==true %}
                        {{ form_widget(edit_form.description, { 'attr': {'class': 'form-control','row':'7'} }) }}
                    {% else %}
                        {{ form_widget(edit_form.description, { 'attr': {'class': 'form-control is-invalid','row':'7'} }) }}
                    {% endif %}
                    <span class="error invalid-feedback">{{ form_errors(edit_form.description) }}</span>
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary btn-block">edit</button>
                <br>

            </div>
            {{ form_end(edit_form) }}
            {{ form_start(delete_form) }}
            <button type="submit" class="btn btn-primary btn-block btn-danger">Delete</button>
            {{ form_end(delete_form) }}

        </div>
        <!-- /.card -->
    </section>
{% endblock %}

{% extends 'baseAdmin.html.twig' %}

{% block content %}
    <section class="content">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Theme creation</h3>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                <div class="form-group">
                    <label >Nom : </label>
                    {% if form.nom.vars.valid==true %}
                        {{ form_widget(form.nom, { 'attr': {'class': 'form-control','row':'1'} }) }}
                    {% else %}
                        {{ form_widget(form.nom, { 'attr': {'class': 'form-control is-invalid','row':'1'} }) }}
                    {% endif %}
                    <span class="error invalid-feedback">{{ form_errors(form.nom) }}</span>
                </div>
                <div class="form-group">
                    <label >Description : </label>
                    {% if form.description.vars.valid==true %}
                        {{ form_widget(form.description, { 'attr': {'class': 'form-control','row':'7'} }) }}
                    {% else %}
                        {{ form_widget(form.description, { 'attr': {'class': 'form-control is-invalid','row':'7'} }) }}
                    {% endif %}
                    <span class="error invalid-feedback">{{ form_errors(form.description) }}</span>
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </div>
            {{ form_end(form) }}
        </div>
    </section>
{% endblock %}
